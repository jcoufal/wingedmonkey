!!!
%html.no-js
  %head
    %title
      = _("Winged Monkey")
      = yield :title
    = stylesheet_link_tag "login", :media => "all"
    = javascript_include_tag 'https://html5shiv.googlecode.com/svn/trunk/html5.js'
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render :partial => 'shared/flash_messages'
    #wrapper
      #container
        #header
          = link_to image_tag("logo.png"), root_url
        #content
          - if Provider.all.blank?
            = render "shared/no_providers"
          - else
            = yield
