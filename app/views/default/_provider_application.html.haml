.container
  = render :partial => 'provider_applications/controls'

  %h3{ :'ng-bind' => 'providerApp.name' }

  = link_to _("see more"), "", :'ng-click' => "showProperties=!showProperties", :class => "more"

%ul.properties.js_hide{ :'wm-toggle' => "showProperties" }
  %li
    %span.label= _("Status")
    %span{ :'ng-bind' => "providerApp.state" }
  %li
    %span.label= _("Launchable")
    %span{ :'ng-bind' => 'providerApp.launchable.name' }
  %li
    %span.label= "{{(providerApp.available_actions | filter:'TERMINATE').length}}"

